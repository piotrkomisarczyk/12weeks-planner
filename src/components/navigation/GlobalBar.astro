---
import type { PlanSummary } from '@/types';
import { Breadcrumbs } from './Breadcrumbs';
import { ThemeToggle } from './ThemeToggle';
import { UserMenu } from './UserMenu';

interface Props {
  plan?: PlanSummary | null;
  userEmail?: string;
}

const { plan, userEmail } = Astro.props;
const currentPath = Astro.url.pathname;
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex h-14 items-center justify-between border-b bg-background">
  <!-- Left side: Logo + Breadcrumbs -->
  <div class="flex items-center gap-4">
    <a
      href="/plans"
      class="flex items-center gap-2 font-semibold text-foreground hover:opacity-80 transition-opacity"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="size-6"
        aria-hidden="true"
      >
        <path d="M8 2v4" />
        <path d="M16 2v4" />
        <rect width="18" height="18" x="3" y="4" rx="2" />
        <path d="M3 10h18" />
        <path d="M8 14h.01" />
        <path d="M12 14h.01" />
        <path d="M16 14h.01" />
        <path d="M8 18h.01" />
        <path d="M12 18h.01" />
        <path d="M16 18h.01" />
      </svg>
      <span class="hidden sm:inline-block">12 Weeks Planner</span>
    </a>
    
    <div class="hidden md:block">
      <Breadcrumbs
        planTitle={plan?.name}
        planStatus={plan?.status}
        currentPath={currentPath}
        client:load
      />
    </div>
  </div>

  <!-- Right side: Theme Toggle + User Menu -->
  <div class="flex items-center gap-2">
    <ThemeToggle client:load />
    <UserMenu userEmail={userEmail} client:load />
  </div>
  </div>
</div>
